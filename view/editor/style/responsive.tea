@import "common/base";
@import "common/grid";

@append "responsive.css";

.grid_spans() {
    @{ 
        for (var i=1;i<=grid.columnCount;i++) {
            @{
                .span@i {
                    .grid.columns(i);
                }        
            }
        }
    }
}

@media (max-width:1199px) {
    .grid(16,30,30);
    .container {
        .grid.container();
    }
    .grid_spans();
}