.page-header, .page-menu, .page-wrapper, .page-footer {
    font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
    font-size: 12px;
    color: #333;
    line-height: 1.5em;
}

.page-header {
    background: #333;
    border-bottom: 2px solid #777777;
    border-left: 2px solid #777777;
    border-radius: 0 0 0 20px;
    margin: 0 !important;
    padding: 5px 10px 5px 15px;
    position: absolute;
    right: 0;
    top: 0;
    color: #aaa;
    white-space: nowrap;
    z-index: 50000;

    a {
        color: #fff;
        text-decoration: none;
    }

    a.home {
        width: 20px;
        height: 20px;
        background: url('data:image/png;base64,');
        display: inline-block;
        vertical-align: bottom;
        margin-left: -5px;
    }
}

.page-menu, .page-wrapper {
    a { 
        color: #337;
        outline: none;
        text-decoration: none;
    }
}

.page-menu {
    z-index: 3;
    position: fixed;
    background: white;
    left: 0; width: 170px;
    top: 0px; bottom: 0px;
    box-shadow: 2px 0px 5px rgba(0,0,0,0.2);
    
    ul {
        margin: 0;
    
        li {
            a {
                display: block;
                font-size: 1.2em;
                padding: 0.7em 1em;
                border-right: none;
                border-left: none;
                text-decoration: none;
            }
            
            #logo {
                background: url("@{tea.dir}/../../../../public/assets/images/lpcandy.png");
                width: 135px;
                height: 103px;
                display: block;
                text-indent: -999em;
                margin: 10px auto;
                border: none;
                padding: 0;
                box-shadow: none;
            }
        }
        
        a:hover, a.active  {
            box-shadow: 0px 0px 5px rgba(0,0,0,0.3) inset;
        }
    }
}

.page-wrapper {
    padding: 0px 0px 50px 170px;
    box-sizing: border-box;
    min-height: 100vh;
    background:url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAYAAACp8Z5+AAAANklEQVQIW2O8e/fufwYGhgtMTEyB//7928B49+7dCwwMDPowQcb79+8rgGRggmAVTExMATBBAOjoHCXWaHqyAAAAAElFTkSuQmCC");
    position: relative;

    .page-title {
        border-top: 5px solid #71a0d0;
        background: #333;
        color: white;
        line-height: 20px;
        padding: 10px 20px;
        font-size: 1.5em;
        font-weight: bold;
        
        .page-actions {
            font-size: 0.6666em;
            font-weight: normal;
            line-height: 14px;
            margin-left: 1em;
            a.button {
                background-color: #f1950a;
                background-image: linear-gradient(top, #ffa011, #dd8500);
            }
        }
    }

    .page-content {
        padding: 1em;
        section {
            background: white;
            box-shadow: 0 0 3px rgba(0,0,0,0.2);
            border-radius: 5px;
            padding: 1.5em;
            margin-bottom: 1em;

            &:last-child {
                margin-bottom: 0;
            }
        }

        form {
            > label {
                display: block;
            }

            .form-field {
                margin-bottom: 1.0em;
                position: relative;
                max-width: 600px;

                &:last-child {
                    margin-bottom: 0;
                }
            }

            span.error {
                font-size: 0.8em;
                position: absolute;
                color: #f00;
                right: 0;
                bottom: -1.6em;
            }

            input[type="text"], textarea {
                display: block;
                width: 100%;
                padding: 0.3em;
                border: 1px solid #ccc;
                border-radius: 0.2em;
                line-height: 1.2em;

                &:focus {
                    border-color: rgba(82,168,236,.8);
                    box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);                
                }
                &.error {
                    background: #faa;
                    border-color: #f00;
                }

            }
        }
    }

    button, .button {
        display: inline-block;
        padding: 0.3em 0.7em;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        outline: none;
        white-space: nowrap;
        line-height: 1em;
        border: 1px solid #ccc;
        border-bottom-color: #bbb;
        border-radius: 0.3em;
        box-shadow: inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05);
        color: #fff;
        text-shadow: 0 -1px 0 rgba(0,0,0,.25);
        background-color: #6296cb;
        background-image: linear-gradient(top, #71a0d0, #4b87c3);
        background-repeat: repeat-x;
        border-color: rgba(0,0,0,0.1) rgba(0,0,0,0.1) rgba(0, 0, 0, 0.25);
    }

    section > button {
        font-size: 1.4em;
    } 
}

.page-footer {
    position: absolute;
    bottom: 0px;
    left: 170px; right: 0px;

    border-top: 5px solid #71a0d0;
    background: #333;
    
    text-align: center;
    box-sizing: border-box;
    height: 55px;
    line-height: 50px;
    
    overflow: hidden;
    
    .beejee-info {
        color: #aaa;
        display: inline-block;
        text-decoration: none;
        
        > span {
            width: 30px;
            height: 30px;
            background: url("@{tea.dir}/../../../../public/assets/images/logo-beejee.jpg");
            text-indent: -999em;
            vertical-align: middle;
            display: inline-block;
            margin-right: 5px;
        }

        > p {
            display: inline-block;
            vertical-align: middle;
            text-align: left;
            font-size: 14px;
            line-height: 1.2em;
            font-family: Arial;

            span {
                color: #FF0;
                
            }
        }
    }
}